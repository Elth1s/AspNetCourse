
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/AdminLTE/_Layout.cshtml";
}

@model IEnumerable<AdminLTE.Models.Employee>

<div class="card">
    @if (Model.Count() > 0)
    {
        <div class="card-header">
            <h3 class="card-title">Employees</h3>
        </div>
        <div class="card-body p-0" style="display: block;">

            <table class="table table-striped projects">
                <thead>
                    <tr>
                        <th>
                            Avatar
                        </th>
                        <th>
                            Name
                        </th>
                        <th>
                            Surname
                        </th>
                        <th>
                            Patronymic
                        </th>
                        <th>
                            Phone
                        </th>
                        <th>
                            LocalCommunity
                        </th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td class="align-middle"><img alt="Avatar" class="table-avatar" src="@AdminLTE.ENV.ImagePath@item.Image"></td>
                            <td class="align-middle">@item.Name</td>
                            <td class="align-middle">@item.Surname</td>
                            <td class="align-middle">@item.Patronymic</td>
                            <td class="align-middle">@item.Phone</td>
                            <td class="align-middle">@item.LocalCommunity.Name</td>
                            <td class="project-actions text-right">
                                <a class="btn btn-info btn-sm" asp-action="Upsert" asp-controller="Employee" asp-route-id="@item.Id">
                                    <i class="fas fa-pencil-alt">
                                    </i>
                                    Edit
                                </a>
                                <a class="btn btn-danger btn-sm" asp-action="ConfirmDelete" asp-controller="Employee" asp-route-id="@item.Id">
                                    <i class="fas fa-trash">
                                    </i>
                                    Delete
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>

        </div>
    }
    else
    {
        <div class="card-header">
            <h3 class="card-title">No employee found</h3>
        </div>
    }
</div>

