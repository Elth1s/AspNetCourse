
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/AdminLTE/_Layout.cshtml";
}

@model IEnumerable<AdminLTE.Models.Employee>

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Employee List</h2>
        </div>
        <div class="col-6 text-right">
            <a class="btn btn-success" asp-controller="Employee" asp-action="Upsert">Add new employee</a>
        </div>
    </div>
    @if (Model.Count() > 0)
    {
        <table class="table table-bordered table-striped">
            <thead>
                <tr>
                    <th>
                        Name
                    </th>
                    <th>
                        Surname
                    </th>
                    <th>
                        Patronymic
                    </th>
                    <th>
                        Phone
                    </th>
                    <th>
                        LocalCommunity
                    </th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                <tr>

                    <td class="align-middle">@item.Name</td>
                    <td class="align-middle">@item.Surname</td>
                    <td class="align-middle">@item.Patronymic</td>
                    <td class="align-middle">@item.Phone</td>
                    <td class="align-middle">@item.LocalCommunity.Name</td>
                    <td width="30%" class="text-center">
                        <div>
                            <a class="btn btn-info w-25" asp-action="Upsert" asp-controller="Employee" asp-route-id="@item.Id">Edit</a>
                            <a class="btn btn-info w-25" asp-action="ConfirmDelete" asp-controller="Employee" asp-route-id="@item.Id">Delete</a>
                        </div>
                    </td>
                </tr>
                }
            </tbody>
        </table>

    }
    else
    {
        <p>No product found</p>
    }
</div>

