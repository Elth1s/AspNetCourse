
@{
    ViewData["Title"] = "ConfirmDelete";
    Layout = "~/Views/Shared/AdminLTE/_Layout.cshtml";
}

@model AdminLTE.Models.Employee
<form method="post" asp-controller="Employee" asp-action="Delete">
    <div class="border p-3">
        <div class="form-group row">
            <h2 class="text-info pl-3">"Remove Employee"</h2>
        </div>
        <input asp-for="Id" hidden />
        <div class="row">
            <div class="col-8">
                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="Name"></label>
                    </div>
                    <div class="col-8">
                        <input class="form-control" asp-for="Name" disabled />
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="Surname"></label>
                    </div>
                    <div class="col-8">
                        <input class="form-control" asp-for="Surname" disabled />
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="Patronymic"></label>
                    </div>
                    <div class="col-8">
                        <input class="form-control" asp-for="Patronymic" disabled />
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="Phone"></label>
                    </div>
                    <div class="col-8">
                        <input class="form-control" asp-for="Phone" disabled />
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="LocalCommunity.Name"></label>
                    </div>
                    <div class="col-8">
                        <input class="form-control" asp-for="LocalCommunity.Name" disabled />
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-7 offset-5">
                        <div class="row">
                            <input type="submit" class="btn btn-info w-25 mr-3" value="Delete" />
                            <a asp-action="Index" class="btn btn-success w-25">Back</a>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-4">
                @if (Model.Id != 0)
                {
                    <img src="@AdminLTE.ENV.ImagePath@Model.Image" />
                }
            </div>
        </div>
    </div>
</form>


