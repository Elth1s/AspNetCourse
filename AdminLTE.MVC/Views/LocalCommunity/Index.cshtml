@model IEnumerable<AdminLTE.Models.LocalCommunity>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/AdminLTE/_Layout.cshtml";
}

<div class="card">
    @if (Model.Count() > 0)
    {
        <div class="card-header">
            <h3 class="card-title">Local Communities</h3>
        </div>
        <div class="card-body p-0" style="display: block;">

            <table class="table table-striped projects">
                <thead>
                    <tr>
                        <th>
                            Name
                        </th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td class="align-middle">@item.Name</td>
                            <td class="project-actions text-right">
                                <a class="btn btn-info btn-sm" asp-action="Upsert" asp-controller="LocalCommunity" asp-route-id="@item.Id">
                                    <i class="fas fa-pencil-alt">
                                    </i>
                                    Edit
                                </a>
                                <a class="btn btn-danger btn-sm" asp-action="ConfirmDelete" asp-controller="LocalCommunity" asp-route-id="@item.Id">
                                    <i class="fas fa-trash">
                                    </i>
                                    Delete
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
    else
    {
        <div class="card-header">
            <h3 class="card-title">No local community found</h3>
        </div>
    }
</div>
